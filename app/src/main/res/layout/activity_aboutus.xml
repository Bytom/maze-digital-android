<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <guru.maze.avatar.view.widget.SimpleTitle
        android:id="@+id/simple_title"
        app:title="@string/about_us"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/update_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/base_margin"
        android:background="@drawable/shape_white_corner16"
        android:elevation="@dimen/_2dp"
        app:layout_constraintTop_toBottomOf="@id/simple_title">

        <guru.maze.avatar.view.widget.ItemLiner
            android:id="@+id/item_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_name="@string/check_update"

            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/updaye_tag"
            app:layout_constraintTop_toTopOf="@+id/item_update"
            app:layout_constraintBottom_toBottomOf="@+id/item_update"
            app:layout_constraintEnd_toEndOf="@+id/item_update"
            android:layout_marginEnd="50dp"
            android:visibility="gone"
            android:background="@drawable/shape_juice_round"
            android:layout_width="@dimen/half_common_margin"
            android:layout_height="@dimen/half_common_margin"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>