<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_margin="@dimen/recycler_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img"
        android:padding="1dp"
app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_height="0dp"/>


    <ImageView
        android:id="@+id/checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/common_margin"
        android:layout_height="@dimen/common_margin"/>


    <View
        android:background="@drawable/shape_transparent_half"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_height="32dp"/>


    <TextView
        android:id="@+id/style_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_margin"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textSize="@dimen/common_margin"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/_3dp"
        android:layout_marginEnd="@dimen/_3dp"
        tools:text="132333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/pro_tag"
        android:layout_width="0dp"
        android:background="@drawable/digital_lock"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/img"
        app:layout_constraintEnd_toEndOf="@+id/img"
        app:layout_constraintBottom_toBottomOf="@+id/img"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>