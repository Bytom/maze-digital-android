<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_white_half">


    <TextView
        android:id="@+id/title_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/common_margin"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_black"
        android:textSize="@dimen/common_text_size"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/title_tips"
        android:layout_width="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_height="wrap_content"/>





    <TextView
        android:id="@+id/not_now"
        android:background="@drawable/shape_login"
        app:layout_constraintTop_toBottomOf="@+id/title_desc"
        android:textSize="@dimen/common_margin"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="200dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/delete_now"
        android:background="@drawable/shape_button_juice"
        app:layout_constraintTop_toBottomOf="@+id/not_now"
        android:textSize="@dimen/common_margin"
        android:textStyle="bold"
        android:textColor="@color/common_white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="200dp"
        android:layout_height="60dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>