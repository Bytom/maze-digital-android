<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_36dp"
    android:background="@drawable/shape_white_stroke_gray">


    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:drawableStart="@drawable/shape_red_round"
        android:drawablePadding="@dimen/half_common_margin"
        android:gravity="center"
        android:paddingStart="@dimen/half_btn_height"
        android:paddingTop="@dimen/half_common_margin"
        android:paddingEnd="@dimen/half_btn_height"
        android:paddingBottom="@dimen/half_common_margin"
        android:textColor="@color/text_black"
        android:textSize="@dimen/common_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="提示内容" />
</androidx.constraintlayout.widget.ConstraintLayout>