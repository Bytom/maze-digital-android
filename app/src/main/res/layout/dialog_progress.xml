<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/refresh_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:text="@string/loading"
        android:textColor="@color/common_white"
        android:textSize="@dimen/common_margin"
        app:layout_constraintEnd_toEndOf="@id/refresh_logo"
        app:layout_constraintStart_toStartOf="@id/refresh_logo"
        app:layout_constraintTop_toBottomOf="@+id/refresh_logo" />

    <TextView
        android:visibility="gone"
        android:id="@+id/hide"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/common_margin"
        android:textColor="@color/common_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:text="@string/hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>