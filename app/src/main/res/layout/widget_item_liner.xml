<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_liner"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_height"
    android:foreground="@drawable/shape_press_button">


    <ImageView
        android:visibility="gone"
        android:layout_marginStart="@dimen/common_margin"
        android:id="@+id/item_liner_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_liner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin"
        android:textSize="@dimen/common_margin"
        tools:text="UserName"
        android:textColor="@color/text_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_liner_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_liner_setname"
        android:layout_width="wrap_content"
        android:maxWidth="170dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:gravity="end"
        android:ellipsize="middle"
        android:layout_marginEnd="@dimen/common_margin"
        android:textSize="@dimen/common_margin"
        android:textColor="@color/text_light"
        tools:text="wallpaper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_liner_next"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_liner_next"
        android:layout_width="@dimen/img_size_24"
        android:layout_height="@dimen/img_size_24"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/gray_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>