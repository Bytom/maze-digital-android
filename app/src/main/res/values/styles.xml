<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dialog_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="DescTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:layout_marginTop">@dimen/img_size_24</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <style name="LineView">
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:background">@color/common_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:layout_marginEnd">@dimen/base_margin</item>
    </style>




    <style name="CommonButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:layout_marginEnd">@dimen/base_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_white</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/common_margin</item>

    </style>

</resources>